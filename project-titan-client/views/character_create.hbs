{{#extend "layout"}}
  {{#content "head" mode="append"}}
    <link rel="stylesheet" href="../styles/character_create.less" />

  {{/content}}

  {{#content "body"}}
    <div class="row">
      <div class="col s9">
        <div class="create-character-window">
            <form id="frmCreateCharacter" class="create-character-form">
              <input type="text"  name="name" placeholder="Character Name" />
              <input type="hidden" name="_heroId" value="1" />
              <button type="submit" class="waves-effect waves-light btn green">Create</button>
            </form>
        </div>
      </div>
      <div class="col s3">
          <h4> Characters </h4>
          <div id="character-list" class="character-list">
          </div>

          <div class="create-character">
            <a class="waves-effect waves-light btn red create-character-btn">
              <i class="fa fa-plus" aria-hidden="true"></i>
              Create Character
            </a>
          </div>
      </div>
    </div>
  {{/content}}

  {{#content "foot" mode="prepend"}}
    <script>
      require('../controllers/character_create.js')
    </script>
  {{/content}}
{{/extend}}
